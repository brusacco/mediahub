<div class="mb-10">
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl mb-2">
    <%= title %>
  </h2>
</div>
<ul role="list" class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  <% stations.each do |station_data| %>
    <% station = station_data[:station] %>
    <li class="col-span-1">
      <%= link_to station_path(station), class: "group relative flex items-center gap-4 rounded-xl bg-white p-4 shadow-sm border border-gray-100 hover:shadow-md hover:border-indigo-200 transition-all duration-300" do %>
        <div class="flex-shrink-0">
          <% if station.logo.attached? %>
            <%= image_tag station.logo, class: 'h-12 w-12 rounded-full bg-gray-100 ring-2 ring-gray-200 group-hover:ring-indigo-200 transition-all duration-300', loading: 'lazy', alt: "#{station.name} logo" %>
          <% else %>
            <div class="h-12 w-12 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center text-white font-semibold text-sm">
              <%= station.name.first.upcase %>
            </div>
          <% end %>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-sm font-semibold text-gray-900 truncate group-hover:text-indigo-600 transition-colors duration-200">
            <%= station.name %>
          </h3>
          <p class="mt-1 text-xs text-gray-500">
            <span class="font-medium text-indigo-600"><%= station_data[:count] %></span> clips
          </p>
        </div>
        <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
          <i class="fa-solid fa-chevron-right text-indigo-600"></i>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
