<nav class="bg-white border-b border-gray-200 shadow-sm">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo and Main Navigation -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <div class="flex-shrink-0">
            <span class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-indigo-700 bg-clip-text text-transparent">
              MediaHub
            </span>
          </div>
        <% end %>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:ml-10 md:block">
          <div class="flex items-baseline space-x-1">
            <%= link_to "Inicio", root_path, class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{request.path == root_path ? 'bg-indigo-50 text-indigo-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900'}" %>
            
            <!-- Dropdown de Tópicos -->
            <div class="relative" data-controller="dropdown" data-dropdown-open-value="false">
              <button type="button" 
                      data-action="click->dropdown#toggle"
                      class="px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-all duration-200 flex items-center gap-1" 
                      aria-expanded="false" 
                      aria-haspopup="true">
                Tópicos
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <!-- Menú desplegable de Tópicos -->
              <div data-dropdown-target="menu" class="absolute z-50 mt-2 w-56 origin-top-right rounded-xl bg-white py-2 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden" role="menu" aria-orientation="vertical" tabindex="-1">
                <% @topicos.each do |topic| %>
                  <%= link_to topic_path(topic), class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors duration-150', role: 'menuitem' do %>
                    <%= topic.name %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- User Menu -->
      <div class="hidden md:block">
        <div class="ml-4 flex items-center md:ml-6">
          <div class="relative ml-3" data-controller="dropdown" data-dropdown-open-value="false">
            <button type="button" 
                    data-action="click->dropdown#toggle"
                    class="relative flex max-w-xs items-center rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 hover:ring-2 hover:ring-indigo-500 hover:ring-offset-2" 
                    aria-expanded="false" 
                    aria-haspopup="true">
              <span class="sr-only">Abrir menú de usuario</span>
              <%= image_tag 'default-avatar.png', class: 'h-8 w-8 rounded-full ring-2 ring-gray-200', alt: 'Avatar de usuario' %>
            </button>
            
            <!-- Menú desplegable de usuario -->
            <div data-dropdown-target="menu" class="absolute right-0 z-50 mt-2 w-48 origin-top-right rounded-xl bg-white py-2 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden" role="menu" aria-orientation="vertical" tabindex="-1">
              <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors duration-150', role: 'menuitem' do %>
                <div class="flex items-center gap-2">
                  <i class="fa-solid fa-right-from-bracket"></i>
                  <span>Cerrar Sesión</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" 
                data-controller="mobile-menu"
                data-action="click->mobile-menu#toggle"
                data-mobile-menu-open-value="false"
                class="inline-flex items-center justify-center rounded-md p-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" 
                aria-controls="mobile-menu" 
                aria-expanded="false">
          <span class="sr-only">Abrir menú principal</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <%= link_to "Inicio", root_path, class: "block rounded-lg px-3 py-2 text-base font-medium #{request.path == root_path ? 'bg-indigo-50 text-indigo-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900'}" %>
      <div class="pt-2">
        <div class="px-3 py-2 text-base font-medium text-gray-700">Tópicos</div>
        <div class="mt-1 space-y-1">
          <% @topicos.each do |topic| %>
            <%= link_to topic.name, topic_path(topic), class: 'block rounded-lg px-6 py-2 text-sm text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>