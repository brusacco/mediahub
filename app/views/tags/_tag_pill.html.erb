<%= link_to tag_path(tag_pill), class: 'inline-flex items-center gap-2 rounded-lg bg-indigo-50 px-3 py-1.5 text-sm font-medium text-indigo-700 ring-1 ring-inset ring-indigo-700/10 hover:bg-indigo-100 hover:ring-indigo-700/20 transition-all duration-200 mb-2' do %>
  <span><%= tag_pill.name %></span>
  <span class='inline-flex items-center rounded-md bg-white px-2 py-0.5 text-xs font-semibold text-indigo-700'>
    <i class="fa-solid fa-tag mr-1"></i>
    <%= tag_pill.count %>
  </span>
<% end %>
