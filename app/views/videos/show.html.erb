<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Detalles del Clip</h1>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="text-left px-4 py-2">Titulo</th>
          <th class="text-left px-4 py-2">Detalle</th>
        </tr>
      </thead>
      <tbody>
        <tr class="border-t">
          <td class="px-4 py-2">Fecha</td>
          <td class="px-4 py-2"><%= @clip.posted_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
        </tr>
        <tr class="border-t">
          <td class="px-4 py-2">Estaci√≥n</td>
          <td class="px-4 py-2"><%= @clip.station.name %></td>
        </tr>
        <tr class="border-t">
          <td class="px-4 py-2">Transcripcion</td>
          <td class="px-4 py-2"><%= @clip.transcription %></td>
        </tr>
        <tr class="border-t">
          <td class="px-4 py-2">Tags</td>
          <td class="px-4 py-2"><%= @clip.tag_list %></td>
        </tr>
        <tr class="border-t">
          <td class="px-4 py-2">Clip</td>
          <td class="px-4 py-2">
            <video class="w-full max-w-md" controls>
              <source src="<%= @clip_path %>" type="video/mp4">
              Your browser does not support the video tag.
            </video>
            <div class="mt-4">
              <a href="<%= @clip_path %>" download data-turbo="false" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Descargar Video
              </a>
            </div>         
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
